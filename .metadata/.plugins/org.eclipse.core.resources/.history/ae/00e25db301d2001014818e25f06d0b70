<%-- 
    Bloco de Mock Data (Dados de Exemplo)
    Este bloco cria uma lista de Mapas para simular objetos Java (AcaoExtensao) 
    e garantir que as expressões EL (${acao.propriedade}) funcionem corretamente. 
    Na aplicação final, esta lista virá de um Servlet ou Controller.
--%>
<%
    // Definindo o tipo de dado para a lista de ações (Map simula o objeto AcaoExtensao)
    java.util.List<java.util.Map<String, Object>> listaAcoes = new java.util.ArrayList<>();
    
    // --- Mock Ação 1: Vigente ---
    java.util.Map<String, Object> acao1 = new java.util.HashMap<>();
    acao1.put("id", 101);
    acao1.put("titulo", "Curso de Inovação em Tecnologias Web (Front-end)");
    acao1.put("status", "Vigente");
    acao1.put("descricaoCurta", "Treinamento intensivo em React e Vue.js para estudantes de TI.");
    acao1.put("descricao", "Este curso visa capacitar os participantes nas últimas tendências de desenvolvimento front-end, focando em frameworks modernos e práticas de UX.");
    acao1.put("dataInicioFormatada", "01/03/2025");
    acao1.put("dataFimFormatada", "30/06/2025");
    acao1.put("local", "Campus Central, Bloco B");
    acao1.put("responsavel", java.util.Map.of("nome", "Prof. João Silva", "email", "joao.silva@uni.edu"));
    acao1.put("temTaxas", true);
    acao1.put("linkExterno", "https://universidade.br/inscricao-inovacao-web");
    listaAcoes.add(acao1);
    
    // --- Mock Ação 2: Encerrada ---
    java.util.Map<String, Object> acao2 = new java.util.HashMap<>();
    acao2.put("id", 205);
    acao2.put("titulo", "Oficina de Libras para a Comunidade");
    acao2.put("status", "Encerrada");
    acao2.put("descricaoCurta", "Introdução à Língua Brasileira de Sinais, com foco em conversação básica.");
    acao2.put("descricao", "Oficina gratuita realizada em parceria com a Secretaria de Educação Municipal, visando a inclusão e comunicação.");
    acao2.put("dataInicioFormatada", "15/09/2024");
    acao2.put("dataFimFormatada", "15/10/2024");
    acao2.put("local", "Polo Comunitário I");
    acao2.put("responsavel", java.util.Map.of("nome", "Profa. Maria Oliveira", "email", "maria.oliver@uni.edu"));
    acao2.put("temTaxas", false);
    acao2.put("linkExterno", ""); // Sem link externo
    listaAcoes.add(acao2);
    
    // Define a lista no escopo do Request para ser acessada pelo JSTL
    request.setAttribute("listaAcoes", listaAcoes);
    
    // Mock Filtro de Busca (para que o campo de input não dê erro)
    request.setAttribute("termoBusca", "");
    request.setAttribute("statusFiltro", "Todos");
%>

    
    <header class="header-institucional">
        <div class="container">
            <h1 class="display-5">Extensão Universitária</h1>
            <p class="lead">Repositório Centralizado de Ações e Iniciativas.</p>
        </div>
    </header>

    <div class="container">
        
        <h2>Ações de Extensão Atuais e Históricas</h2>
        <p class="mb-4">Use a busca e os filtros para encontrar eventos, cursos e projetos.</p>

        <!-- Formulário de Busca e Filtro -->
        <form action="acoes" method="GET" class="row g-3 mb-5 p-3 border rounded shadow-sm bg-light">
            <div class="col-md-6">
                <label for="busca" class="form-label fw-bold">Buscar por Título ou Descrição</label>
                <input type="text" class="form-control" id="busca" name="busca" value="${termoBusca}" placeholder="Ex: Libras, Saúde, Web">
            </div>
            <div class="col-md-4">
                <label for="status" class="form-label fw-bold">Filtrar por Status</label>
                <select id="status" name="status" class="form-select">
                    <option value="Todos" ${statusFiltro eq 'Todos' ? 'selected' : ''}>Todas</option>
                    <option value="Vigente" ${statusFiltro eq 'Vigente' ? 'selected' : ''}>Vigentes</option>
                    <option value="Encerrada" ${statusFiltro eq 'Encerrada' ? 'selected' : ''}>Encerradas</option>
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">Buscar</button>
            </div>
        </form>

        <div class="row">
            <c:choose>
                <c:when test="${not empty listaAcoes}">
                    <c:forEach var="acao" items="${listaAcoes}">
                        <div class="col-md-6 mb-4">
                            <div class="card card-acao shadow-sm h-100">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title text-primary">${acao.titulo}</h5>
                                    
                                    <!-- USANDO BADGE PARA STATUS -->
                                    <span class="badge ${acao.status eq 'Vigente' ? 'bg-success' : 'bg-secondary'} mb-2">
                                        ${acao.status}
                                    </span>
                                    
                                    <!-- CORREÇÃO APLICADA AQUI: USANDO getDescricaoCurta() -->
                                    <p class="card-text mt-2 flex-grow-1 text-muted">${acao.descricaoCurta}</p>
                                    
                                    <ul class="list-unstyled small mt-auto pt-2 border-top">
                                        <li><strong>Período:</strong> ${acao.dataInicioFormatada} a ${acao.dataFimFormatada}</li>
                                        <li><strong>Local:</strong> ${acao.local}</li>
                                        <li><strong>Responsável:</strong> ${acao.responsavel.nome}</li>
                                        <li><strong>Taxas:</strong> 
                                            <span class="fw-bold ${acao.temTaxas ? 'text-danger' : 'text-success'}">
                                                ${acao.temTaxas ? 'Sim (Consultar)' : 'Não'}
                                            </span>
                                        </li>
                                    </ul>

                                    <button type="button" class="btn btn-sm btn-outline-primary mt-2" data-bs-toggle="modal" data-bs-target="#modalAcao${acao.id}">
                                        Ver Detalhes
                                    </button>
                                </div>
                            </div>
                        </div>
                    </c:forEach>
                </c:when>
                <c:otherwise>
                    <div class="col-12">
                        <div class="alert alert-warning text-center" role="alert">
                            Nenhuma ação de extensão encontrada com os critérios de busca.
                        </div>
                    </div>
                </c:otherwise>
            </c:choose>
        </div>

        <!-- Modais de Detalhes -->
        <c:forEach var="acao" items="${listaAcoes}">
            <div class="modal fade" id="modalAcao${acao.id}" tabindex="-1" aria-labelledby="modalAcaoLabel${acao.id}" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header bg-primary text-white">
                            <h5 class="modal-title" id="modalAcaoLabel${acao.id}">${acao.titulo}</h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <p class="lead">${acao.descricao}</p>
                            <hr>
                            <dl class="row">
                                <dt class="col-sm-3">Status</dt>
                                <dd class="col-sm-9"><span class="badge ${acao.status eq 'Vigente' ? 'bg-success' : 'bg-secondary'}">${acao.status}</span></dd>
                                
                                <dt class="col-sm-3">Período</dt>
                                <dd class="col-sm-9">${acao.dataInicioFormatada} até ${acao.dataFimFormatada}</dd>
                                
                                <dt class="col-sm-3">Local</dt>
                                <dd class="col-sm-9">${acao.local}</dd>
                                
                                <dt class="col-sm-3">Responsável</dt>
                                <dd class="col-sm-9">${acao.responsavel.nome} (${acao.responsavel.email})</dd>
                                
                                <dt class="col-sm-3">Taxas</dt>
                                <dd class="col-sm-9"><span class="${acao.temTaxas ? 'text-danger' : 'text-success'} fw-bold">${acao.temTaxas ? 'Sim, verificar detalhes na inscrição.' : 'Não'}</span></dd>
                                
                                <c:if test="${not empty acao.linkExterno}">
                                    <dt class="col-sm-3">Inscrição/Informações</dt>
                                    <dd class="col-sm-9"><a href="${acao.linkExterno}" target="_blank" class="text-decoration-underline">Acessar Link Externo</a></dd>
                                </c:if>
                            </dl>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                        </div>
                    </div>
                </div>
            </div>
        </c:forEach>

    </div> 
    
    <!-- Script do Bootstrap (deve ser o último no body) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
