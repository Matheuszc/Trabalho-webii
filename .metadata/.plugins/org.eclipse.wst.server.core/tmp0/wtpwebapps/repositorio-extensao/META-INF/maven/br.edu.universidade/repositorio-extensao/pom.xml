<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  
  <modelVersion>4.0.0</modelVersion>
  <groupId>br.edu.universidade</groupId>
  <artifactId>repositorio-extensao</artifactId>
  <packaging>war</packaging>
  <version>0.0.1-SNAPSHOT</version>
  <name>repositorio-extensao Maven Webapp</name>
  <url>http://maven.apache.org</url>

<properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.source>17</maven.compiler.source>
    <maven.compiler.target>17</maven.compiler.target>
    
    <!-- Jakarta EE 10 (compartivel com Tomcat 11) -->
    <jakarta.servlet.api.version>6.0.0</jakarta.servlet.api.version> 
    <jakarta.jstl.api.version>3.0.0</jakarta.jstl.api.version>
</properties>

<dependencies>
    
    <!-- 1. Servlet API 6.0.0 (Jakarta EE 10) - Nota: O Tomcat 11 fornece esta API -->
    <dependency>
        <groupId>jakarta.servlet</groupId>
        <artifactId>jakarta.servlet-api</artifactId>
        <version>${jakarta.servlet.api.version}</version> 
        <scope>provided</scope>
    </dependency>

    <!-- 2. JSTL API 3.0.0 (Jakarta EE) -->
    <dependency>
        <groupId>jakarta.servlet.jsp.jstl</groupId>
        <artifactId>jakarta.servlet.jsp.jstl-api</artifactId>
        <version>${jakarta.jstl.api.version}</version>
    </dependency>
    
    <!-- 3. JSTL Implementation 3.0.0  -->
    <dependency>
        <groupId>org.glassfish.web</groupId>
        <artifactId>jakarta.servlet.jsp.jstl</artifactId>
        <version>${jakarta.jstl.api.version}</version>
    </dependency>
    
</dependencies>

  <build>
    <finalName>repositorio-extensao</finalName>
    <plugins>
        
        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-compiler-plugin</artifactId>
            <version>3.11.0</version>
            <configuration>
                <source>${maven.compiler.source}</source>
                <target>${maven.compiler.target}</target>
            </configuration>
        </plugin>
        
        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-war-plugin</artifactId>
            <version>3.3.2</version>
            <configuration>
                <failOnMissingWebXml>false</failOnMissingWebXml>

            </configuration>
      </plugin>
        
    </plugins>
  </build>
</project>